<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/fragment_settings_controller_mail_server_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_title_text" style="@style/SettingsTitle" />
    <LinearLayout android:orientation="vertical" android:id="@id/fragment_settings_controller_mail_server_smtp_server" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Switch android:id="@id/fragment_settings_controller_mail_server_smtp_server_enable" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_smtp_server_authentication_enable_text" style="@style/SettingsSwitch" />
        <LinearLayout android:orientation="vertical" android:id="@id/fragment_settings_controller_mail_server_smtp_server_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_hostname_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_hostname_hint" style="@style/SettingsTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_hostname" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_port_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_port_hint" style="@style/SettingsTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_port" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>
            <Switch android:id="@id/fragment_settings_controller_mail_server_smtp_server_enable_ssl" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_smtp_server_enable_ssl_text" style="@style/SettingsSwitch" />
            <Switch android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_enable" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_smtp_server_authentication_enable_text" style="@style/SettingsSwitch" />
            <LinearLayout android:orientation="vertical" android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_username_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_authentication_username_hint" style="@style/SettingsTextInputLayout">
                    <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_username" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textAutoComplete" android:imeOptions="actionNext" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_password_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_authentication_password_hint" style="@style/SettingsTextInputLayout">
                    <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_authentication_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textPassword" android:imeOptions="actionNext" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <Switch android:id="@id/fragment_settings_controller_mail_server_smtp_server_specify_sender" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_smtp_server_specify_sender_text" style="@style/SettingsSwitch" />
            <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_specify_sender_address_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_specify_sender_address_hint" style="@style/SettingsTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_specify_sender_address" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:id="@id/fragment_settings_controller_mail_server_smtp_server_test_address_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/global_metric_16" android:text="@string/fragment_settings_controller_mail_server_smtp_server_test_address_title_text" style="@style/SettingsTitle" />
            <com.google.android.material.textfield.TextInputLayout android:id="@id/fragment_settings_controller_mail_server_smtp_server_test_address_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/fragment_settings_controller_mail_server_smtp_server_test_address_hint" style="@style/SettingsTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText android:id="@id/fragment_settings_controller_mail_server_smtp_server_test_address" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@id/fragment_settings_controller_mail_server_smtp_server_test_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/fragment_settings_controller_mail_server_smtp_server_test_button_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>