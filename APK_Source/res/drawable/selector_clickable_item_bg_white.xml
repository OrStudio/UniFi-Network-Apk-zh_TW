<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/global_color_control_highlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <color android:color="@color/global_color_control_highlight" />
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <color android:color="@color/global_bg_selected" />
            </item>
            <item android:state_activated="true">
                <color android:color="@color/global_bg_selected" />
            </item>
            <item>
                <color android:color="@color/global_bg_front" />
            </item>
        </selector>
    </item>
</ripple>