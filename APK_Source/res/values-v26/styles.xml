        <item name="android:windowBackground">@color/light_theme_panel_back</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:spinnerStyle">@style/Widget.UniFi.Spinner</item>
        <item name="android:textColorHighlight">@color/global_text_highlight</item>
        <item name="android:textColorHint">@color/global_text_hint</item>
        <item name="android:textColorLink">@color/global_text_link</item>
        <item name="android:textColorTertiary">@color/global_text_tertiary</item>
        <item name="android:textColorTertiaryInverse">@color/global_text_tertiary_inverse</item>
        <item name="actionBarStyle">@style/ThemeOverlay.Unifi.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Unifi.ActionBar</item>
        <item name="alertDialogTheme">@style/UniFiDialogStyle</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlActivated">@color/global_color_control_activated</item>
